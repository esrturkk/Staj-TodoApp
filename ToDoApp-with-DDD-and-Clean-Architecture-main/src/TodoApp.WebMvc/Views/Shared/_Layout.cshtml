<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TodoApp.WebMvc</title>

    <!-- Tek bir Bootstrap seç -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TodoApp.WebMvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    TodoApp by Esra Türk
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-3 align-items-center">
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Profile">Profil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="TodoList" asp-action="Index">TodoListlerim</a>
                            </li>
                            <li class="nav-item">
                                <!-- Link gibi görünen Çıkış -->
                                <form id="logoutForm" method="post" asp-controller="User" asp-action="Logout" class="d-none">
                                    @Html.AntiForgeryToken()
                                </form>
                                <a href="#" class="nav-link" onclick="document.getElementById('logoutForm').submit(); return false;">
                                    Çıkış
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Login">Giriş</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Register">Kayıt</a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>


    <div class="container">
        <!-- tam geniş istersen container-fluid yap -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Tek bir Bootstrap JS seç -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
