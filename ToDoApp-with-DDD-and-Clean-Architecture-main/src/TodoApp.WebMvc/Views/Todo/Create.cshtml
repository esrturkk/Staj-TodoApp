@model TodoApp.WebMvc.Models.CreateTodoViewModel
@{
    ViewData["Title"] = "Görev Ekle";
}

<div class="container-fluid" style="max-width: 900px;">
    <h2 class="mb-4 text-center">Görev Ekle</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" asp-action="Create">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TodoListId" />

                <div class="mb-3">
                    <label class="form-label">Başlık</label>
                    <input class="form-control" asp-for="Title" placeholder="Başlık girin" required />
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Açıklama</label>
                    <textarea class="form-control" asp-for="Description" rows="3" placeholder="İsteğe bağlı"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label">Son Tarih</label>
                    <input class="form-control" asp-for="DueDate" type="date" />
                    <span class="text-danger" asp-validation-for="DueDate"></span>
                </div>

                <div class="d-flex gap-2">
                    <a class="btn btn-outline-secondary"
                       asp-action="Index"
                       asp-route-todoListId="@Model.TodoListId">İptal</a>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
